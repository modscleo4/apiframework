{
    "compilerOptions": {
        "moduleResolution": "NodeNext",
        "module": "ESNext",
        "target": "ESNext",
        "lib": [
            "ESNext"
        ],
        "sourceMap": true,
        "declaration": true,
        "stripInternal": true,
        "outDir": "./dist"
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "**/*.spec.ts"
    ]
}
